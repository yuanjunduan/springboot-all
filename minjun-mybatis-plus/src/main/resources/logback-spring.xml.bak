<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="logDir" value="/dubhe/log/vcs/"/>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%n%d{HH:mm:ss.SSS} ${HOSTNAME} %p [%X{traceId}] [%X{tid}]  [%t] [%c{1}:%M:%L] => %.-5000m%n</pattern>
        </encoder>
    </appender>

    <!-- sql执行大约2s拦截 -->
    <appender name="sqlExecutionTimeInterceptor" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 指定日志文件的名称 -->
        <File>${logDir}/slowSql.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${logDir}/slowSql-%d{yyyy-MM-dd}.%i.log.zip</FileNamePattern>
            <MaxHistory>30</MaxHistory>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>500MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <!-- 日志输出格式： -->
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} ${HOSTNAME} [%X{traceId}] [%X{tid}] [ %thread ] - [ %-5level ] [ %logger{50} : %line ] - %msg%n</pattern>
        </layout>
    </appender>
    <logger name="min.jun.config.datasource.SqlExecutionTimeInterceptor" level="DEBUG" additivity="false">
        <appender-ref ref="sqlExecutionTimeInterceptor" />
    </logger>



    <appender name="file_all" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${logDir}/all.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <FileNamePattern>${logDir}/all-%d{yyyy-MM-dd}.%i.log.zip</FileNamePattern>
            <!--限定单个文件的大小-->
            <maxFileSize>1GB</maxFileSize>
            <!--限定归档文件的最大数量,对应filePattern中变量%i-->
            <maxHistory>24</maxHistory>
            <!--限定全局所有的归档日志的大小-->
            <totalSizeCap>100GB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>%n%d{yyyy-MM-dd HH:mm:ss.SSS} ${HOSTNAME} %p [%X{traceId}] [%X{tid}] [%t] [%c{1}:%M:%L] => %.-5000m%n</pattern>
        </encoder>
    </appender>
    <appender name="file_all_async" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>1024</queueSize>
        <includeCallerData>true</includeCallerData>
        <appender-ref ref="file_all"/>
    </appender>
    <root level="INFO">
        <appender-ref ref="console"/>
        <appender-ref ref="file_all_async"/>
    </root>

</configuration>
